<h1 class="title is-4">User Data for
    <%= user.fullName %></h1>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Email</th>

    </tr>
    <tr>
        <td><%= user.fullName %></td>
        <td><%= user.email %></td>
    </tr>
</table>

<h1 class="title is-5">Mentorship Program</h1>

<!-- First, check if users has mentorship -->
<% if (user.mentorship) { %>
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Track</th>
            <th>Notes</th>
        </tr>
        <tr>
            <td>
                <a href="<%= `/mentorships/${user.mentorship._id}` %>">
                    <%= `${user.mentorship._id}` %>
                </a>
            </td>

        </td>
        <td>
            <a href="<%= `/mentorships/${user.mentorship._id}` %>">
                <%= `${user.mentorship.programTrack}` %>
            </a>
        </td>
        <td>
            <a href="<%= `/mentorships/${user.mentorship._id}` %>">
                <%= `${user.mentorship.notes}` %>
            </a>
        </td>
    </tr>
</table>
<!-- if not, display h1 message -->
<% } else { %>
  <h1>No active mentorship</h1><% } %>
  <div>
    <a href="/users">View all users</a>
  </div>
  <div>
    <a href="<%=`/users/${user._id}/edit`%>">
      Edit User Details
    </a>
  </div>
  <div>
  <a href="<%= `/users/${user._id}/delete?_method=DELETE` %>" onclick="return confirm(
              'Are you sure you want to delete this user?')">Delete
  </a>
</div>
